<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="scrollmodalLabel">Delete User</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="login-form">
					<form action="/" method="post" enctype="multipart/form-data">
						<h1>Are you sure ?</h1>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-danger">Delete</button>
			</div>
			</form>
		</div>
	</div>
</div>

<script>
	function deleteUserModal(itemJson) {
		console.log("Hello ...");
		var item = JSON.parse(itemJson);
		console.log(item);
		if (item._id) {
			$("#deleteUserModal form").attr("action", `/admin/user/${item._id}/delete`);
		} else {
			$("#deleteUserModal form").attr("action", "#");
		}
	}
</script>